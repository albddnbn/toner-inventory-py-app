/* search button on search dialog */
QPushButton[class="search-button"] {
	padding-top: 6px;
	padding-bottom: 6px;
	margin-bottom: 6px;
}
QMessageBox QPushButton {
	width: 100px;
	height: 35px;;
	padding: 3px;
}